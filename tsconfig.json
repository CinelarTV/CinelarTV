{
  "compilerOptions": {
    "declaration": false,
    "module": "es2022",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    "moduleResolution": "bundler",
    "target": "es2022",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowImportingTsExtensions": false,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "noEmit": true,
    "baseUrl": "./app/frontend/webclient",
    "paths": {
      "@/*": [
        "cinelartv/*"
      ]
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}