#!/usr/bin/env ruby
# frozen_string_literal: true

APP_ROOT = File.expand_path('..', __dir__)
Dir.chdir(APP_ROOT) do
  pnpm = ENV['PATH'].split(File::PATH_SEPARATOR)
                   .reject { |dir| File.expand_path(dir) == __dir__ }
                   .product(['pnpm', 'pnpm.cmd', 'pnpm.ps1'])
                   .map { |dir, file| File.expand_path(file, dir) }
                   .find { |file| File.executable?(file) }

  if pnpm
    exec pnpm, *ARGV
  else
    warn 'pnpm executable was not detected in the system.'
    warn 'Download pnpm at https://pnpm.io/installation'
    exit 1
  end
end
